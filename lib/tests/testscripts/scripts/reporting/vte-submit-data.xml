    <test id="01-Measure-Submit-Data">
        <name value="01-Measure-Submit-Data"/>
        <description value="Submit the required data for a known Measure using HTTP POST. Expected response is 200 (OK)."/>
        <action>
            <operation>
                <type>
                    <code value="submit-data"/>
                </type>
                <resource value="Measure"/>
                <description value="Measure $submit-data operation for a known Measure."/>
                <accept value="json"/>
                <contentType value="json"/>
                <encodeRequestUrl value="true"/>
                <params value="MitreTestScript-measure-vte-1-FHIR"/>
                <sourceId value="vte-submit-data-input"/>
            </operation>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned HTTP status is 200(OK)."/>
                <direction value="response"/>
                <response value="okay"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the response Bundle contains the MeasureReport ID"/>
                <direction value="response"/>
                <operator value="contains"/>
                <path value="$.entry[0].response.location"/>
                <value value="${createMeasureReportId}"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the response Bundle contains the Patient ID"/>
                <direction value="response"/>
                <operator value="contains"/>
                <path value="$.entry[1].response.location"/>
                <value value="${createPatientId}"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the response Bundle contains the Practitioner ID"/>
                <direction value="response"/>
                <operator value="contains"/>
                <path value="$.entry[2].response.location"/>
                <value value="${createPractitionerId}"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the response Bundle contains the Encounter ID"/>
                <direction value="response"/>
                <operator value="contains"/>
                <path value="$.entry[3].response.location"/>
                <value value="${createEncounterId}"/>
            </assert>
        </action>
    </test>

